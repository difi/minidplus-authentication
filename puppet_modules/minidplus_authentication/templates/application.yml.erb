auditlog:
  dir: <%= @auditlog_dir %>
  file: <%= @auditlog_file %>

## Tomcat access log
server:
  port: <%= @server_port %>
  tomcat:
    basedir: <%= @tomcat_tmp_dir %>
    accesslog:
      directory: <%= @log_root%><%= @application %>
    max-threads: <%= @server_tomcat_max_threads%>
    min-spare-threads: <%= @server_tomcat_min_spare_threads%>

sms:
  onetimepassword-ttl: <%= @sms_onetimepassword_ttl %>
  pswincom:
    url: <%= @pswincom_url %>
    username: <%= @pswincom_username %>
    password: <%= @pswincom_password %>

spring:
  ldap:
    urls: <%= @ldap_url %>
    username: <%= @ldap_userdn %>
    password: <%= @ldap_password %>
    base: <%= @ldap_base_minid %>
    maxConnections: 10
    maxWait: 5000

event:
  jmsUrl: <%= @eventlog_jms_url %>
  jmsQueue: <%= @eventlog_jms_queuename %>

minid-plus:
  token-lifetime-seconds: <%= @token_lifetime_seconds%>
  cache:
     otp-ttl-in-ms: <%= @sms_onetimepassword_ttl %>